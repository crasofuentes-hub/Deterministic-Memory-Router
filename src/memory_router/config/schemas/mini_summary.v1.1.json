{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "mini_summary.v1.1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_id", "config_version", "trace_id", "agent", "stable_id", "source_block_ids", "summary", "max_tokens", "scores"],
  "properties": {
    "schema_id": { "type": "string", "const": "mini_summary.v1.1" },
    "config_version": { "type": "string", "minLength": 1 },
    "trace_id": { "type": "string", "minLength": 1 },

    "agent": { "type": "string", "enum": ["preferences", "code", "conversation"] },
    "stable_id": { "type": "integer", "minimum": 1 },

    "source_block_ids": {
      "type": "array",
      "minItems": 1,
      "maxItems": 20,
      "items": { "type": "string", "minLength": 1 }
    },

    "summary": { "type": "string", "minLength": 1, "maxLength": 400 },
    "max_tokens": { "type": "integer", "minimum": 10, "maximum": 80 },

    "scores": {
      "type": "object",
      "additionalProperties": false,
      "required": ["match_query", "recency", "priority", "score_global"],
      "properties": {
        "match_query": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "recency": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "priority": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "score_global": { "type": "number", "minimum": 0.0, "maximum": 1.0 }
      }
    }
  }
}